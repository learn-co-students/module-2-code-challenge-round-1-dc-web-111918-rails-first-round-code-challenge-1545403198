<h1>Create A New Heroine!</h1>

<%= form_for @heroine do |f|%>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<br>
<div>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %>
</div>
<br>

<div>
  <%= f.collection_select(:power_id, Power.all, :id,:name, prompt: "Choose a Superpower!") %>
</div>
<br>

<%= f.submit "Create New Heroine!" %>




<% end %>
